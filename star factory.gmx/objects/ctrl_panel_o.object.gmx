        if(planetsUpdatingTrail == global.num_planets) {
            updatePlanetDirection = false;
            planetsUpdatingTrail = 0;
        }
        /*if(sun_o.m&gt;=897.0){
            isOn=0;
            planets = global.planets;
            gameOver=1;
        }*/
    }
    if(gameOver) isOn=0;
}
